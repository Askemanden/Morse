<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>


<HBox fx:controller="morse.app.Controller" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="800" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <children>
        <VBox fx:id="buttonContainer" prefWidth="80.0">
            <children>
                <Button fx:id="translatorButton" text="translator" prefWidth="80"/>
                <Button fx:id="settingsButton" text="settings" prefWidth="80"/>
                <Button fx:id="exitButton" text="exit" prefWidth="80"/>
            </children>
        </VBox>

        <VBox fx:id="translator" prefWidth="500.0" visible="false" managed="false">
            <children>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefWidth="500.0">
                    <items>
                        <VBox>
                            <Label text="Input" />
                            <TextArea fx:id="inputTextArea" prefWidth="500.0" />
                        </VBox>
                        <VBox>
                            <Label text="Translated" />
                            <TextArea fx:id="outputTextArea" prefWidth="500.0" editable="false" />
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </VBox>

        <VBox fx:id="settings" prefWidth="500.0" visible="false" managed="false">
            <children>
                <Label text="Settings - coming soon" />
            </children>
        </VBox>

        <VBox fx:id="messageBox" prefWidth="500.0">
            <children>

                <Label fx:id="chatName" text="Your current chat appears here" />

                <ScrollPane fx:id="messages" prefWidth="500.0">
                    <content>
                        <VBox fx:id="messagesContainer" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>

        <VBox fx:id="profile" prefWidth="300.0">
            <children>
                <Label fx:id="username" text="Your username" />
            </children>
        </VBox>

    </children>
</HBox>
